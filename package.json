{
    "name": "kingdomarchitect",
    "version": "1.0.0",
    "description": "Kingdom architects is intended to be a building/management game",
    "type": "module",
    "author": "Trym Nilsen",
    "private": true,
    "license": "MIT",
    "homepage": "https://github.com/trymnilsen/kingdomarchitect#readme",
    "scripts": {
        "build": "tsc && rollup -c",
        "spritepack": "tsc && node build/tool/spritepack/spritePack.js",
        "start": "http-server public -c-1",
        "test": "tsc && node --test",
        "bundle": "rollup -c",
        "format": "prettier ts/ --write",
        "check-format": "prettier ts/ --check",
        "lint": "eslint ts/src",
        "verify": "npm run test && npm run check-format && npm run lint"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/trymnilsen/kingdomarchitect.git"
    },
    "bugs": {
        "url": "https://github.com/trymnilsen/kingdomarchitect/issues"
    },
    "dependencies": {
        "@edugis/rollup-plugin-sourcemaps": "0.6.4",
        "@types/node": "^20.8.0",
        "http-server": "^14.1.1",
        "jimp": "^0.22.10",
        "maxrects-packer": "^2.7.3",
        "prettier": "^3.0.3",
        "rollup": "^3.29.4",
        "sanitize-filename": "^1.6.3"
    },
    "overrides": {
        "xml2js": "^0.5.0",
        "semver": "^7.5.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.7.3",
        "@typescript-eslint/parser": "^6.7.4",
        "eslint": "^8.50.0",
        "typescript": "^5.2.2"
    }
}

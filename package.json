{
    "name": "kingdomarchitect",
    "version": "1.0.0",
    "description": "Kingdom architects is intended to be a building/management game",
    "type": "module",
    "author": "Trym Nilsen",
    "private": true,
    "license": "MIT",
    "homepage": "https://github.com/trymnilsen/kingdomarchitect#readme",
    "scripts": {
        "build": "tsc && rollup -c",
        "spritepack": "tsc && node build/tool/spritepack/spritePack.js",
        "generate-loaders": "tsc && node build/tool/typelistgen/typelistgen.js",
        "test": "tsc && node --test",
        "bundle": "rollup -c",
        "format": "prettier ts/ --write",
        "check-format": "prettier ts/ --check"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/trymnilsen/kingdomarchitect.git"
    },
    "bugs": {
        "url": "https://github.com/trymnilsen/kingdomarchitect/issues"
    },
    "dependencies": {
        "@edugis/rollup-plugin-sourcemaps": "0.6.4",
        "@types/node": "^20.8.0",
        "maxrects-packer": "^2.7.3",
        "pngjs": "^7.0.0",
        "prettier": "^3.0.3",
        "rollup": "^3.29.4",
        "typescript": "^5.2.2"
    },
    "overrides": {
        "xml2js": "^0.5.0",
        "semver": "^7.5.3"
    },
    "devDependencies": {
        "@types/pngjs": "^6.0.3"
    }
}

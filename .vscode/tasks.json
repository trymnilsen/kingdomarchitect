{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "build",
            "dependsOn": ["build typescript"],
            "label": "bundle typescript",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "command": "rm -rf build",
            "type": "shell",
            "label": "clean",
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "build typescript",
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "dependsOn": ["clean"],
            "problemMatcher": [
                "$tsc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
        
    ]
}